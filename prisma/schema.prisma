datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Subscriber {
  id          String @id @default(uuid())
  name        String
  email       String
  company     String
  website     String
  marketing   Boolean
  police      Boolean
  created_at  DateTime @default(now())
}

model Message {
  id          String @id @default(uuid())
  text        String
  name        String
  avatar_url  String
  created_at  DateTime @default(now())
}